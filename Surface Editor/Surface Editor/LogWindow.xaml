<Window x:Class="Surface_Editor.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Surface_Editor"
        mc:Ignorable="d"
        Title="LogWindow" Height="450" Width="500" Opacity="0.8" WindowStyle="ToolWindow" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"></RowDefinition>
            <RowDefinition Height="0.7*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox Name="LogTextBox" Grid.Row="0" TextWrapping="Wrap" ScrollViewer.HorizontalScrollBarVisibility="Disabled"
         ScrollViewer.VerticalScrollBarVisibility="Auto"/>
        <DockPanel Grid.Row="1" LastChildFill="False">
            <Button Width="60" Margin="20,5,20,0" DockPanel.Dock="Right" IsCancel="True" IsDefault="True">Close</Button>
        </DockPanel>
    </Grid>
</Window>
